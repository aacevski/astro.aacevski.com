---
import ColorModePopover from './color-mode-popover.tsx'
import { Image } from 'astro:assets'
import logo from '/public/logo.png'
---

<div
  class='z-50 p-3 sticky flex items-center justify-center top-0 left-0 right-0 bg-[rgba(255,255,255,0.2)] dark:bg-[rgba(30,30,30,0.8)] backdrop-blur'
>
  <div
    class='max-w-[640px] flex flex-1 justify-between items-center px-2 md:px-0'
  >
    <a href='/' class='flex items-center cursor-pointer'>
      <Image
        id='logo'
        src={logo}
        alt="Andrej Acevski's logo"
        class='w-6 h-6 cursor-pointer'
        loading='eager'
      />
    </a>
    <ColorModePopover client:only='preact' />
  </div>
</div>
