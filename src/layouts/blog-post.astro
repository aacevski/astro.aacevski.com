---
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/base-head.astro'
import MainLayout from './main-layout.astro'
import BreadcrumbsPost from '../components/breadcrumbs-post.astro'

type Props = CollectionEntry<'blog'>['data'] & {
  slug: string
}

const post = Astro.props
---

<html lang='en' class='dark'>
  <head>
    <BaseHead title={post.title} description={post.description} />
  </head>
  <body>
    <MainLayout>
      <BreadcrumbsPost slug={post.slug} title={post.title} />
      <article class='prose max-w-3xl prose-invert'>
        <slot />
      </article>
    </MainLayout>
  </body>
</html>
